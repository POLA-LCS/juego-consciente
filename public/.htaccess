# Juego Consciente - Archivo .htaccess
# Ubicación: ludopatia/public/.htaccess

<IfModule mod_rewrite.c>
    # Activar el módulo de reescritura
    RewriteEngine On

    # La Base de la URL es la carpeta "ludopatia" en htdocs (ajustar si fuera necesario)
    # Importante: Si estás en http://localhost/ludopatia/, la base es /ludopatia/
    RewriteBase /ludopatia/

    # Si la petición es para un archivo o directorio que existe, úsalo directamente
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Si no es un archivo o directorio, redirige la petición a index.php
    # y pasa el resto de la URL a la variable 'url'
    RewriteRule ^(.+)$ index.php?url=$1 [QSA,L]
</IfModule>