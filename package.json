    "license": "SEE LICENSE IN LICENSE.md",
    "type": "commonjs",
    "bugs": {
        "url": "https://github.com/POLA-LCS/juego-consciente/issues"
    },
    "homepage": "https://github.com/POLA-LCS/juego-consciente",
